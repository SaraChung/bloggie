<div class="row">
  <div class= "col-sm-8">
      <% @posts.each  do |post| %>
      <%= link_to post_path(post) do %>
      <div class = "post-layout">
        <h3><%= post.title %></h3>
        <h4><%= post.user.email %></h4>
        <h4><%= post.date %></h4>
        <p><%= post.content %></p>
      <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4">
    <% if @posts.any? %>
      <h4>All Posts</h4>
      <% @posts.each  do |post| %>
        <h5><%= link_to post.title, post_path(post) %></h5>
      <% end %>
    <% end %>
  </div>
</div>